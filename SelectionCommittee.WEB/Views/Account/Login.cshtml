@model SelectionCommittee.WEB.Models.LoginModel

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_LogInSignUpLayout.cshtml";
}
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-7 col-sm-8 mx-auto">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    <h1 class="text-center">Login</h1>
                    <hr>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, "Email")
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, "Пароль")
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-row text-center">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Войти</button>
                        </div>
                    </div>
                    <div>
                        @Html.ActionLink("Регистрация", "Register", "Account")
                    </div>
                }
            </div>
        </div>
    </div>
