<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("style", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-info">
            @Html.ActionLink("Приемная комиссия", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    @Html.Action("DropDownFaculties")
                    <li class="nav-item">
                        <a class="nav-link" href="#">Контакты</a>
                    </li>
                </ul>
                <div class="d-flex my-2 my-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Личный кабинет", "PersonalArea");
                        <a role="button" href="/Account/Logout" class="btn btn-outline-light" aria-pressed="true">Выйти</a>
                    }
                    else
                    {
                        <a role="button" href="/Account/Login" class="btn btn-outline-light my-2 my-sm-0" aria-pressed="true">Войти</a>
                    }
                </div>
           </div>
        </nav>
    </header>
    <main>
            <div class="row">
                <div class="col-sm-10 mx-auto">
                @RenderBody()
                    </div>
                </div>
</main>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>