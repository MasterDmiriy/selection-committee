@using SelectionCommittee.WEB.Models;
@model InfoAboutUser

@{
    ViewBag.Title = "PersonalArea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="mx-md-5 mt-2 px-md-5">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="personalInfo-tab" data-toggle="tab" href="#personalInfo" role="tab" 
                   aria-controls="personalInfo" aria-selected="true">Личные данные</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="markCertificate-tab" data-toggle="tab" href="#markCertificate" role="tab" 
                   aria-controls="markCertificate" aria-selected="false">Аттестат</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="markEIE-tab" data-toggle="tab" href="#markEIE" role="tab" aria-controls="markEIE" 
                   aria-selected="false">ЗНО</a>
            </li>
        </ul>

        <div class="tab-content p-3 mb-2 border border-top-0 border-black-50 rounded-bottom"  id="myTabContent">
            <div class="tab-pane fade show active" id="personalInfo" role="tabpanel" aria-labelledby="personalInfo-tab">
                <div class="row py-3">
                    <div class="col-md"></div>
                    <div class="col-4 text-muted">ФИО</div>
                    <div class="col-6">@Model.FullName</div>
                </div>
                <div class="row py-3">
                    <div class="col-md"></div>
                    <div class="col-4 text-muted">Электронная почта</div>
                    <div class="col-6">@Model.Email</div>
                </div>
                @if (Model.City == null)
                {
                    <div class="row py-3">
                        <div class="col-md"></div>
                        <div class="col-4 text-muted">Область</div>
                        <div class="col-6">@Model.Region</div>
                    </div>
                }
                else
                {
                    <div class="row py-3">
                        <div class="col-md"></div>
                        <div class="col-4 text-muted">Город</div>
                        <div class="col-6">@Model.City</div>
                    </div>
                    <div class="row py-3">
                        <div class="col-md"></div>
                        <div class="col-4 text-muted">Область</div>
                        <div class="col-6">@Model.Region</div>
                    </div>
                }
            <div class="row py-3">
                <div class="col-md"></div>
                <div class="col-4 text-muted">Учебное заведение</div>
                <div class="col-6">@Model.EducationalInstitution</div>
            </div>
            </div>
            <div class="tab-pane fade" id="markCertificate" role="tabpanel" aria-labelledby="markCertificate-tab">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th class="border-top-0" scope="col">Название предмета</th>
                        <th class="border-top-0" scope="col">Оценка</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var subjectMark in Model.MarkCertificate)
                    {
                        <tr>
                            <td>@subjectMark.Key</td>
                            <td>@subjectMark.Value</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="markEIE" role="tabpanel" aria-labelledby="markEIE-tab">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="border-top-0" scope="col">Название предмета</th>
                            <th class="border-top-0" scope="col">Оценка</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subjectMark in Model.MarkEIE)
                        {
                            <tr>
                                <td>@subjectMark.Key</td>
                                <td>@subjectMark.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
