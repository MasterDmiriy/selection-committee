@model IEnumerable<string>

@if (Model.Count() != 0)
{
    <div class="mt-5 row p-md-2 px-4 mx-1 border border-secondary rounded">
        <h2 class="text-center mb-3 col-12">Списки поступивших</h2>
        @foreach (var file in Model)
        {
            <a class="col-md-4 col-sm-6 col-12 statement" href="~/Content/Statements/@(file).pdf">
                <span class="text">@file</span>
            </a>
        }
    </div>
}