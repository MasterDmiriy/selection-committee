@model IEnumerable<SelectionCommittee.BLL.DataTransferObject.SpecialtyDTO>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <p>
        @Html.ActionLink("Добавить специальность", "CreateSpecialty", new {facultyId = ViewBag.FacultyId})
    </p>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Номер</th>
        <th scope="col">Название</th>
        <th scope="col">Бюджетных мест</th>
        <th scope="col">Всего мест</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @if(Model.Count()==0)
    {
        <tr>
            <td colspan="2">Нет еще ни одной специальности</td>
        </tr>
    }
    else
    {
        foreach (var specialty in Model)
        {
            <tr>
                <th scope="row">@specialty.Number</th>
                <td>@specialty.Name</td>
                <td>@specialty.BudgetPlaces</td>
                <td>@specialty.TotalPlaces</td>
                <td>@Html.ActionLink("Изменить", "EditSpecialty", new {id = specialty.Id})
                    @Html.ActionLink("Удалить", "DeleteSpecialty", new {id= specialty.Id, facultyId = specialty.FacultyId})</td>
            </tr>
        }
    }
    </tbody>
</table>
<div>
    @Html.ActionLink("Вернутся к факультетам", "Faculties")
</div>
